= form_for @round do |f|
  - if @round.errors.any?
    #error_explanation
      %h2= "#{pluralize(@round.errors.count, "error")} prohibited this round from being saved:"
      %ul
        - @round.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :game_id
    = f.select :game_id, options_for_select(Game.all.map{|s|[s.location, s.id]})

  %br/
  .actions
    = f.submit 'Enregistrer', :class=>"btn btn-primary"
  %hr