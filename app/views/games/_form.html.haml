= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :location
    = f.text_field :location
  %br/
  .actions
    = f.submit 'Enregistrer', :class=>"btn btn-primary"
  %hr