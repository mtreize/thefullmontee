#calendar
  = month_calendar(attribute: :created_at, events: @games) do |date, games| 
    %span.pull-right.daynumber.rounded.rounded-circle.px-1
      = date.day
    %br
    -games.each do |game|
      -game.winners.each do |player|
        =link_to player, "data-toggle"=>"tooltip", "data-placement"=>"auto", :title=>"#{player.name}", :style=>"text-decoration: none;" do 
          .avatar_winner.border.rounded-circle.border-warning
            -if player.avatar.present?
              =image_tag "animals/#{player.avatar}.png", :class=>"avatar img-circle", size: "40"
            -else
              =image_tag "animals/sheep-1.png", :class=>"avatar img-circle", size: "40"
      -# game.losers.each do |player|

        =link_to player, "data-toggle"=>"tooltip", "data-placement"=>"auto", :title=>"#{player.name}", :style=>"text-decoration: none;" do 
          .avatar_loser.border.rounded-circle.border-danger
            -if player.avatar.present?
              =image_tag "animals/#{player.avatar}.png", :class=>"avatar img-circle greyscale", size: "30"
            -else
              =image_tag "animals/sheep-1.png", :class=>"avatar img-circle greyscale", size: "30"

:javascript
  $('[data-toggle="tooltip"]').tooltip()